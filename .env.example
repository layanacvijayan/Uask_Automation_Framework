# .env
# ============================================
# OpenAI Configuration (for AI validation)
# ============================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4

# ============================================
# Test Configuration
# ============================================
# Base URL for U-Ask chatbot
BASE_URL=https://ask.u.ae

# Browser settings
HEADLESS=true
SLOW_MO=0

# Test execution
WORKERS=1
RETRIES=0

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info

# ============================================
# Report Configuration
# ============================================
REPORT_OUTPUT=playwright-report
ALLURE_RESULTS=allure-results

# ============================================
# Timeouts (milliseconds)
# ============================================
DEFAULT_TIMEOUT=30000
ACTION_TIMEOUT=15000
NAVIGATION_TIMEOUT=30000

# ============================================
# AI Validation Thresholds
# ============================================
SIMILARITY_THRESHOLD=0.65
HALLUCINATION_CONFIDENCE_THRESHOLD=0.3


# ============================================
# When CAPTCHA appears, solve it manually
# ============================================

# CRITICAL SETTINGS FOR CAPTCHA
HEADLESS=false              # MUST be false
CAPTCHA_TIMEOUT=180000      # 3 minutes
LOG_LEVEL=info
SKIP_CAPTCHA=false          # Set true to skip CAPTCHA tests
